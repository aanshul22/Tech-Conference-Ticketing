<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="GUI.MainController" alignment="center" hgap="10" vgap="10" prefHeight="650" prefWidth="750"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text id="welcome" text="Welcome"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Username:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="usernameField" text="haha"
            GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Password:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="passwordField" text="hehe"
                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button text="Sign In"
                onAction="#handleSignInButtonAction"/>
    </HBox>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button id="signUp" text="Don't Have An Account?"
                onAction="#handleSignUpButtonAction"/>
    </HBox>

    <Text fx:id="prompt"
          GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="RIGHT" GridPane.rowIndex="7"/>

    <stylesheets>
        <URL value="@Welcome.css" />
    </stylesheets>

</GridPane>
