<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          stylesheets="@CreateEvent.css"
          fx:controller="GUI.OrganizerGUI.CreateEvent.CreateEventController"
          alignment="center" hgap="10" vgap="10"
          prefHeight="650.0" prefWidth="900.0"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Label id="create" text="Create Event"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Event Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="eventNameField" prefWidth="300"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Start Time:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="startTimeField" promptText="YYYY-MM-DD HH:MM"
               GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="End Time:"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="endTimeField" promptText="YYYY-MM-DD HH:MM"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Event Capacity"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="eventCapacityField"
                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Speakers(optional)"
           GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="speakersField" promptText="Speaker1,Speaker2,..."
               GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Room:"
           GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="roomNameField"
               GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="7">
        <Button text="Create" onAction="#handleCreateEventButtonAction"/>
    </HBox>

</GridPane>
