<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="GUI.OrganizerGUI.CreateRoom.CreateRoomController"
          alignment="center" hgap="10" vgap="10"
          prefHeight="650.0" prefWidth="900.0"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Text id="create" text="Create Room"
          GridPane.columnIndex="0" GridPane.rowIndex="0"
          GridPane.columnSpan="2"/>

    <Label text="Room Name:"
           GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="roomNameField"
               GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Button text="Check Name Availability"
                onAction="#handleCheckNameButtonAction"/>
    </HBox>

    <Label text="Maximum Occupancy"
           GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <TextField fx:id="maxOccupancyField"
               GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox  spacing="10" alignment="bottom_right" GridPane.columnIndex="0" GridPane.rowIndex="4" />

    <HBox spacing="10" alignment="bottom_right"
          GridPane.columnIndex="1" GridPane.rowIndex="5">
        <Button text="Create"
                onAction="#handleCreateButtonAction"/>
    </HBox>

    <Text fx:id="prompt"
          GridPane.columnIndex="0" GridPane.columnSpan="2"
          GridPane.halignment="RIGHT" GridPane.rowIndex="6"/>

</GridPane>